@model PagedList.IPagedList<Model.EF.Content>
@using PagedList.Mvc;
@{ ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml"; }
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@item.MetaTitle</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="/Admin/Content/Edit/@item.ID">Sửa</a>
                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                        {
                            Confirm = "Bạn muốn xóa bản ghi này",
                            OnComplete = "$('#row_" + @item.ID + "').remove()",
                            HttpMethod = "Delete"

                        })
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Raw(@item.Detail)
            </div>
        </div>
    </div>
}
</div>
<script src="/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="/Assets/Admin/js/demo/datatables-demo.js"></script>

